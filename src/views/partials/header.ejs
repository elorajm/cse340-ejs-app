<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>

  <!-- Global styles (always loaded) -->
  <link rel="stylesheet" href="/css/main.css" />

  <!-- Route-specific styles & scripts -->
  <%- renderStyles() %>
  <%- renderScripts() %>
</head>

<body class="<%= bodyClass %>">
  <header>
    <nav>
      <ul>
        <!-- All navigation links always visible -->
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/catalog">Course Catalog</a></li>
        <li><a href="/faculty">Faculty Directory</a></li>
        <li><a href="/contact">Contact</a></li>
        <li><a href="/demo">Middleware Demo</a></li>
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/register/list">All Users</a></li>
        <li><a href="/contact/responses">Contact Responses</a></li>
        <li><a href="/logout">Logout</a></li>
        <li><a href="/login">Login</a></li>
        <li><a href="/register">Register</a></li>
      </ul>
    </nav>
    <p><%= greeting %></p>

    </header>
  <% 
    const messages = flash();
    const hasMessages = Object.values(messages).some(arr => arr.length > 0);
  %>
  <% if (hasMessages) { %>
    <div class="flash-messages">
      <% Object.keys(messages).forEach(type => { %>
        <% messages[type].forEach(message => { %>
          <div class="flash <%= type %>">
            <%= message %>
          </div>
        <% }); %>
      <% }); %>
    </div>
  <% } %>
